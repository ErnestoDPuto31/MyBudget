<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

	<View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header_gradient" />

	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="20dp"
        android:scrollbarStyle="outsideOverlay">

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                android:text="MY BUDGET"
                android:textSize="30sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp" />

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="8dp"
                android:layout_marginBottom="20dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="REMAINING MONTHLY BALANCE"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#757575" />

				<TextView
					android:id="@+id/monthlyBalanceText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="PHP 8,000.00"
					android:textSize="32sp"
					android:fontFamily="sans-serif-black"
					android:textColor="#2E7D32"
					android:layout_marginTop="4dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="REMAINING THIS WEEK BALANCE"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#757575"
					android:layout_marginTop="12dp"/>

				<TextView
					android:id="@+id/weeklyBalanceText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="PHP 2,000.00"
					android:textSize="28sp"
					android:fontFamily="sans-serif-black"
					android:textColor="#2E7D32"
					android:layout_marginTop="4dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="15dp">

					<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="SPENT TODAY:"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#9E9E9E" />

					<TextView
						android:id="@+id/spentTodayText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="PHP 75.00"
						android:textSize="12sp"
						android:textColor="#424242"
						android:fontFamily="sans-serif-medium"/>
				</LinearLayout>

				<ProgressBar
					android:id="@+id/budgetProgress"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="8dp"
					android:progress="70"
					android:max="100"
					android:layout_marginTop="8dp"
					android:progressTint="#2E7D32"
					android:progressBackgroundTint="#757575"/>

				<TextView
					android:id="@+id/daysLeftText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="30 Days Remaining"
					android:textSize="12sp"
					android:fontFamily="sans-serif-medium"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="5dp"
					android:textColor="#757575" />				
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginBottom="24dp">

				<EditText
					android:id="@+id/budgetInput"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:hint="Set Monthly Allowance"
					android:paddingLeft="15dp"
					android:textColor="#212121"
					android:textColorHint="#9E9E9E"
					android:background="@drawable/card_bg"
					android:elevation="2dp"
					android:inputType="numberDecimal" />

				<Button
					android:id="@+id/setBudgetBtn"
					android:layout_width="80dp"
					android:layout_height="50dp"
					android:text="SET"
					android:fontFamily="sans-serif-medium"
					android:background="@drawable/rounded_green_bg"
					android:textColor="#FFFFFF"
					android:layout_marginStart="12dp"
					android:elevation="4dp" />
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ESSENTIALS"
				android:textStyle="bold"
				android:textSize="14sp"
				android:textColor="#212121"
				android:layout_marginBottom="12dp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="horizontal"
				android:layout_marginBottom="24dp">

				<Button
					android:id="@+id/btnEssentialMonthly"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:layout_marginEnd="10dp"
					android:background="@drawable/card_bg"
					android:backgroundTint="#4A90E2"
					android:fontFamily="sans-serif-black"
					android:text="MONTHLY"
					android:textColor="#FFFFFF"
					android:textSize="20sp" />

				<Button
					android:id="@+id/btnEssentialWeekly"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:layout_marginStart="10dp"
					android:background="@drawable/card_bg"
					android:backgroundTint="#BD70E6"
					android:fontFamily="sans-serif-black"
					android:text="WEEKLY"
					android:textColor="#FFFFFF"
					android:textSize="20sp" />
			</LinearLayout>

			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUICK DAILY LOG"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginBottom="12dp"/>

			<GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:clipToPadding="false">

				<Button android:id="@+id/btnHealth" android:text="ðŸ¥ Health" style="@style/ModernCategoryButton" />
				<Button android:id="@+id/btnPets" android:text="ðŸ¾ Pets" style="@style/ModernCategoryButton" />
				<Button android:id="@+id/btnFood" android:text="ðŸ” Food" style="@style/ModernCategoryButton" />
				<Button android:id="@+id/btnTransport" android:text="ðŸš— Travel" style="@style/ModernCategoryButton" />
				<Button android:id="@+id/btnEntertainment" android:text="ðŸŽ¬ Fun" style="@style/ModernCategoryButton" />
				<Button android:id="@+id/btnOthers" android:text="ðŸ“¦ Other" style="@style/ModernCategoryButton" />
			</GridLayout>

			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT TRANSACTIONS"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:outlineProvider="background">

				<ListView
                    android:id="@+id/expenseListView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="8dp"
                    android:nestedScrollingEnabled="true" />
			</LinearLayout>

			<Button
				android:id="@+id/resetWeekBtn"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:text="START NEW MONTH"
				android:backgroundTint="#FFEBEE"
				android:textColor="#D32F2F"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="40dp"
				android:elevation="0dp"
				android:fontFamily="sans-serif-medium" />

		</LinearLayout>
	</ScrollView>
</RelativeLayout>