<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.MyBudget" parent="android:Theme.Material.Light.NoActionBar">
		<item name="android:colorPrimary">#2E7D32</item>
		<item name="android:colorPrimaryDark">#1B5E20</item>
		<item name="android:colorAccent">#4CAF50</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
	</style>

	<style name="Theme.MyBudget.Splash" parent="android:Theme.Material.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_bg</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="ModernCategoryButton" parent="android:Widget.Material.Light.Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">65dp</item>
		<item name="android:layout_columnWeight">1</item>
		<item name="android:layout_margin">6dp</item>
		<item name="android:backgroundTint">#FFFFFF</item>
		<item name="android:textColor">#2E7D32</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">16sp</item>
		<item name="android:elevation">4dp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

</resources>